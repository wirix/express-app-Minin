<div>Редактировать курс {{course.title}}</div>
<form action="/courses/edit" method='POST'>
  <div class="input-field">
    <input id="title" name='title' type="text" class="validate" required value='{{course.title}}'>
    <label for="title">Название курса</label>
    <span class="helper-text" data-error="wrong" data-success="right">Неверно</span>
  </div>

  <div class="input-field">
    <input id="price" name='price' type="number" class="validate" required value='{{course.price}}'>
    <label for="price">Цена курса</label>
    <span class="helper-text" data-error="wrong" data-success="right">Неверно</span>
  </div>

  <div class="input-field">
    <input id="img" name='img' type="text" class="validate" required value='{{course.img}}'>
    <label for="img">URl img</label>
    <span class="helper-text" data-error="wrong" data-success="right">Неверно</span>
  </div>

  <div class="input-field">
    <input id="id" name='id' type="text" class="validate" value='{{course.id}}'>
  </div>

  <button class='btn btn-primary'>Cохранить  курс</button>
</form>